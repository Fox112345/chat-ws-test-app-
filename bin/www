#!/usr/bin/env node

/**
 * Module dependencies.
 */
const app = require('../app');
const debug = require('debug')('chat-ws-test-app:server');
const http = require('http');
const ws = require('socket.io');


/**
 * Get port from environment and store in Express.
 */
const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */


const server = http.createServer(app);
const io = ws(server);

let message = 0;

/**
 * Listen on provided port, on all network interfaces.
 */
const { generateMsg, generateLocationMsg } = require('../src/utils/messages')

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);
io.on('connection', (socket)=>{

  socket.emit('contentUpdate', generateMsg('Welcome!'));
  socket.broadcast.emit('contentUpdate',  generateMsg('A new user joined'));

  socket.on('msg', (msg, cb) => {
    io.emit('contentUpdate',  generateMsg(msg));
    cb('delivered')
  });

  socket.on('sendLocation', (location,cb) => {
    io.emit('locationMsg', generateLocationMsg(`https://google.com/maps?q=${location.latitude},${location.longitude}`));
    cb('location delivered')
  })

});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
      ? 'Pipe ' + port
      : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
